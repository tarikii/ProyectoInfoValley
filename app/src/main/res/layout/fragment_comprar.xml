<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40CFFF"
    tools:context=".Comprar">

    <TextView
        android:id="@+id/messageComprar"
        style="@style/MyMessageStyle"
        android:layout_width="253dp"
        android:layout_height="62dp"
        android:layout_marginTop="15dp"
        android:text="Que te gustaria comprar de aquÃ­?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/objetosAComprarCuadro"
        android:layout_width="353dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/objetos_comprar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageComprar" />

    <ImageView
        android:id="@+id/baguetteComprar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/baguette_comprar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/objetosAComprarCuadro" />

    <ImageView
        android:id="@+id/incubadoraComprar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="270dp"
        android:background="@drawable/incubadora_comprar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/baguetteComprar"
        app:layout_constraintTop_toTopOf="@+id/objetosAComprarCuadro" />

    <ImageView
        android:id="@+id/ovejaComprar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="200dp"
        android:background="@drawable/oveja_comprar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/incubadoraComprar"
        app:layout_constraintTop_toTopOf="@+id/objetosAComprarCuadro" />

    <ImageView
        android:id="@+id/cerdoComprar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/cerdo_comprar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ovejaComprar"
        app:layout_constraintTop_toTopOf="@+id/objetosAComprarCuadro" />

    <ImageView
        android:id="@+id/mayonesaComprar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/mayonesa_comprar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cerdoComprar"
        app:layout_constraintTop_toTopOf="@+id/objetosAComprarCuadro" />

    <ImageView
        android:id="@+id/recolectorComprar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/recolector_comprar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mayonesaComprar"
        app:layout_constraintTop_toTopOf="@+id/objetosAComprarCuadro" />

    <ImageView
        android:id="@+id/radiadorComprar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/radiador_comprar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baguetteComprar" />


    <TextView
        android:id="@+id/botonVolverComprar"
        style="@style/MyButtonStyle"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="15dp"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objetosAComprarCuadro" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>