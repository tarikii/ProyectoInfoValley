<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40CFFF"
        tools:context=".Regaderas">

        <TextView
            android:id="@+id/solarionRegadera"
            style="@style/MySolarionStyle"
            android:layout_width="154dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Regaderas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scrollNombreRegadera"
            style="@style/MyScrollStyle"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Nombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/solarionRegadera" />

        <TextView
            android:id="@+id/scrollPrecioRegadera"
            style="@style/MyScrollStyle"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="Precio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/solarionRegadera" />

        <ImageView
            android:id="@+id/regaderaNormal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/regadera_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollNombreRegadera" />

        <TextView
            android:id="@+id/regaderaNormalTitulo"
            android:layout_width="78dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="Regaderas"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/regaderaNormal"
            app:layout_constraintTop_toBottomOf="@+id/scrollNombreRegadera" />

        <TextView
            android:id="@+id/regaderaNormalPrecio"
            android:layout_width="98dp"
            android:layout_height="42dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:text="Herramienta inicial"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollPrecioRegadera" />

        <ImageView
            android:id="@+id/regaderaCobre"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/regadera_cobre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regaderaNormal" />

        <TextView
            android:id="@+id/regaderaCobreTitulo"
            android:layout_width="99dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:text="Regaderas de cobre"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/regaderaCobre"
            app:layout_constraintTop_toBottomOf="@+id/regaderaNormalTitulo" />

        <TextView
            android:id="@+id/regaderaCobrePrecio"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="35dp"
            android:text="2000"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regaderaNormalPrecio" />

        <ImageView
            android:id="@+id/regaderaCobreMoneda"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/regaderaCobrePrecio"
            app:layout_constraintTop_toBottomOf="@+id/regaderaNormalPrecio" />

        <ImageView
            android:id="@+id/regaderaAcero"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/regadera_acero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regaderaCobre" />

        <TextView
            android:id="@+id/regaderaAceroTitulo"
            android:layout_width="99dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="Regaderas de acero"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/regaderaAcero"
            app:layout_constraintTop_toBottomOf="@+id/regaderaCobreTitulo" />

        <TextView
            android:id="@+id/regaderaAceroPrecio"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="35dp"
            android:text="5000"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regaderaCobrePrecio" />

        <ImageView
            android:id="@+id/regaderaAceroMoneda"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/regaderaAceroPrecio"
            app:layout_constraintTop_toBottomOf="@+id/regaderaCobrePrecio" />

        <ImageView
            android:id="@+id/regaderaOro"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/regadera_oro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regaderaAcero" />

        <TextView
            android:id="@+id/regaderaOroTitulo"
            android:layout_width="107dp"
            android:layout_height="43dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="Regaderas de oro"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/regaderaOro"
            app:layout_constraintTop_toBottomOf="@+id/regaderaAceroTitulo" />

        <TextView
            android:id="@+id/regaderaOroPrecio"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="35dp"
            android:text="10.000"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regaderaAceroPrecio" />

        <ImageView
            android:id="@+id/regaderaOroMoneda"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/regaderaOroPrecio"
            app:layout_constraintTop_toBottomOf="@+id/regaderaAceroPrecio" />

        <ImageView
            android:id="@+id/regaderaIridio"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/regadera_iridio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regaderaOro" />

        <TextView
            android:id="@+id/regaderaIridioTitulo"
            android:layout_width="118dp"
            android:layout_height="37dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:text="Regaderas de iridio"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/regaderaIridio"
            app:layout_constraintTop_toBottomOf="@+id/regaderaOroTitulo" />

        <TextView
            android:id="@+id/regaderaIridioPrecio"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="35dp"
            android:text="25.000"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regaderaOroPrecio" />

        <ImageView
            android:id="@+id/regaderaIridioMoneda"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/regaderaIridioPrecio"
            app:layout_constraintTop_toBottomOf="@+id/regaderaOroPrecio" />

        <TextView
            android:id="@+id/botonVolverRegaderas"
            style="@style/MyButtonStyle"
            android:layout_width="141dp"
            android:layout_height="48dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="Volver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regaderaIridio" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>