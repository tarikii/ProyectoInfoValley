<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40CFFF"
        tools:context=".TijerasEsquilar">

        <TextView
            android:id="@+id/chatMessageTijerasEsquilar"
            style="@style/MyMessageStyle"
            android:layout_width="282dp"
            android:layout_height="48dp"
            android:layout_marginTop="45dp"
            android:text="Quieres vender tijeras de esquilar?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tijerasEsquilarTijerasEsquilar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/tijeras_esquilar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chatMessageTijerasEsquilar" />

        <TextView
            android:id="@+id/tijerasEsquilarTexto"
            android:layout_width="146dp"
            android:layout_height="44dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="50dp"
            android:text="Tijeras de Esquilar"
            android:textColor="#000"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/TijerasEsquilarPrecio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tijerasEsquilarTijerasEsquilar" />

        <TextView
            android:id="@+id/TijerasEsquilarPrecio"
            android:layout_width="145dp"
            android:layout_height="74dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="35dp"
            android:text="1000"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tijerasEsquilarTijerasEsquilar" />

        <ImageView
            android:id="@+id/TijerasEsquilarMoneda"
            android:layout_width="78dp"
            android:layout_height="69dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tijerasEsquilarTijerasEsquilar" />

        <TextView
            android:id="@+id/siBotonTijerasEsquilar"
            style="@style/MyButtonStyle"
            android:layout_width="80dp"
            android:layout_height="64dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="55dp"
            android:text="Si"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TijerasEsquilarPrecio" />

        <TextView
            android:id="@+id/noBotonTijerasEsquilar"
            style="@style/MyButtonStyle"
            android:layout_width="80dp"
            android:layout_height="64dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="55dp"
            android:text="No"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/siBotonTijerasEsquilar"
            app:layout_constraintTop_toBottomOf="@+id/TijerasEsquilarMoneda" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>