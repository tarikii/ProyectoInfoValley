                android:id="@+id/respuestaCalamardo90"
                android:layout_width="169dp"
                android:layout_height="42dp"
                android:layout_marginEnd="90dp"
                android:background="#FFF"
                android:text="Hay un total de 120 niveles en la mina."
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/messageCalamardo90" />


            <TextView
                android:id="@+id/botonVolverForoQA"
                style="@style/MyButtonStyle"
                android:layout_width="141dp"
                android:layout_height="48dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="160dp"
                android:layout_marginBottom="100dp"
                android:text="Volver"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/respuestaCalamardo90" />

            <TextView
                android:id="@+id/ingresaTuPregunta"
                style="@style/MyButtonStyle"
                android:layout_width="167dp"
                android:layout_height="48dp"
                android:layout_marginTop="150dp"
                android:text="Ingresa tu pregunta"
                android:textColor="#003091"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/botonVolverForoQA"
                app:layout_constraintTop_toBottomOf="@+id/respuestaCalamardo90" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>