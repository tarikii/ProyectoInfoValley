                app:layout_constraintTop_toBottomOf="@+id/xasthur777Consulta" />

            <TextView
                android:id="@+id/messageAlixers12"
                style="@style/MyMessageStyle"
                android:layout_width="98dp"
                android:layout_height="33dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="150dp"
                android:text="Alixers12"
                android:textColor="#FFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/respuestasXasthur777" />

            <TextView
                android:id="@+id/respuestaAlixers12"
                android:layout_width="154dp"
                android:layout_height="95dp"
                android:layout_marginEnd="90dp"
                android:background="#FFF"
                android:text="Stardew Valley no tiene un final oficial. Puedes seguir jugando todo el tiempo que quieras."
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/messageAlixers12" />


            <TextView
                android:id="@+id/messageAlibaba32"
                style="@style/MyMessageStyle"
                android:text="Alibaba32"
                android:layout_width="98dp"
                android:layout_height="33dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="220dp"
                android:textColor="#FFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/respuestaAlixers12" />

            <TextView
                android:id="@+id/alibaba32Consulta"
                android:layout_width="147dp"
                android:layout_height="89dp"
                android:layout_marginEnd="165dp"
                android:background="#FFF"
                android:text="¿Por qué decide tu personaje irse a vivir a la granja de su abuelo?"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/messageAlibaba32" />

            <TextView
                android:id="@+id/respuestasAlibaba32"
                style="@style/MyTextBoxStyle"
                android:layout_width="132dp"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="120dp"
                android:text="Respuestas"
                android:textColor="#EE00FF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alibaba32Consulta" />

            <TextView
                android:id="@+id/messageLeviathan51"
                style="@style/MyMessageStyle"
                android:layout_width="98dp"
                android:layout_height="33dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="150dp"
                android:text="Leviathan51"
                android:textColor="#FFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/respuestasAlibaba32" />

            <TextView
                android:id="@+id/respuestaLeviathan51"
                android:layout_width="159dp"
                android:layout_height="113dp"
                android:layout_marginEnd="90dp"
                android:background="#FFF"
                android:text="Porque su abuelo se lo recomienda, quiere una vida mas tranquila y esta cansado de estar tan estresado en su oficina."
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/messageLeviathan51" />

            <TextView
                android:id="@+id/messageTelepathic666"
                style="@style/MyMessageStyle"
                android:text="Telepathic666"
                android:layout_width="98dp"
                android:layout_height="33dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="220dp"
                android:textColor="#FFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/respuestaLeviathan51" />

            <TextView
                android:id="@+id/telepathic666Consulta"
                android:layout_width="147dp"
                android:layout_height="37dp"
                android:layout_marginEnd="165dp"
                android:background="#FFF"
                android:text="¿Cuántos niveles tienen las minas?"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/messageTelepathic666" />

            <TextView
                android:id="@+id/respuestasTelepathic666"
                style="@style/MyTextBoxStyle"
                android:layout_width="132dp"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="120dp"
                android:text="Respuestas"
                android:textColor="#EE00FF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telepathic666Consulta" />

            <TextView
                android:id="@+id/messageCalamardo90"
                style="@style/MyMessageStyle"
                android:layout_width="98dp"
                android:layout_height="33dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="150dp"
                android:text="Calamardo90"
                android:textColor="#FFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/respuestasTelepathic666" />

