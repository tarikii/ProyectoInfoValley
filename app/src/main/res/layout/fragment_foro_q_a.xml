<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40CFFF"
    tools:context=".ForoQA">

    <TextView
        android:id="@+id/solarionForoQA"
        style="@style/MySolarionStyle"
        android:layout_width="162dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:text="Preguntas del foro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scrollForoQA"
        style="@style/MyScrollStyle"
        android:layout_width="212dp"
        android:layout_height="52dp"
        android:layout_marginTop="25dp"
        android:text="Preguntas ya resueltas"
        android:textColor="#00FF0A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/solarionForoQA" />

    <ScrollView
        android:layout_width="362dp"
        android:layout_height="462dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollForoQA">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="200dp">

            <TextView
                android:id="@+id/messageXasthur"
                style="@style/MyMessageStyle"
                android:layout_width="98dp"
                android:layout_height="33dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="220dp"
                android:text="Xasthur777"
                android:textColor="#FFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/xasthur777Consulta"
                android:layout_width="140dp"
                android:layout_height="24dp"
                android:layout_marginEnd="150dp"
                android:background="#FFF"
                android:text="El juego tiene final?"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/messageXasthur" />


            <TextView
                android:id="@+id/respuestasXasthur777"
                style="@style/MyTextBoxStyle"
                android:layout_width="132dp"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="120dp"
                android:text="Respuestas"
                android:textColor="#EE00FF"
                app:layout_constraintEnd_toEndOf="parent"
