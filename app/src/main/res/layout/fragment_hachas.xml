<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40CFFF"
        tools:context=".Hachas">

        <TextView
            android:id="@+id/solarionHacha"
            style="@style/MySolarionStyle"
            android:layout_width="154dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Hachas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scrollNombreHacha"
            style="@style/MyScrollStyle"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Nombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/solarionHacha" />

        <TextView
            android:id="@+id/scrollPrecioHacha"
            style="@style/MyScrollStyle"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="Precio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/solarionHacha" />

        <ImageView
            android:id="@+id/hachaNormal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/hacha_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollNombreHacha" />

        <TextView
            android:id="@+id/hachaNormalTitulo"
            android:layout_width="78dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:text="Hachas"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/hachaNormal"
            app:layout_constraintTop_toBottomOf="@+id/scrollNombreHacha" />

        <TextView
            android:id="@+id/hachaNormalPrecio"
            android:layout_width="98dp"
            android:layout_height="42dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:text="Herramienta inicial"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollPrecioHacha" />

        <ImageView
            android:id="@+id/hachaCobre"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/hacha_cobre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hachaNormal" />

        <TextView
            android:id="@+id/hachaCobreTitulo"
            android:layout_width="99dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:text="Hachas de cobre"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/hachaCobre"
            app:layout_constraintTop_toBottomOf="@+id/hachaNormalTitulo" />

        <TextView
            android:id="@+id/hachaCobrePrecio"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="35dp"
            android:text="2000"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hachaNormalPrecio" />

        <ImageView
            android:id="@+id/hachaCobreMoneda"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hachaCobrePrecio"
            app:layout_constraintTop_toBottomOf="@+id/hachaNormalPrecio" />

        <ImageView
            android:id="@+id/hachaAcero"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/hacha_acero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hachaCobre" />

        <TextView
            android:id="@+id/hachaAceroTitulo"
            android:layout_width="99dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="Hachas de acero"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/hachaAcero"
            app:layout_constraintTop_toBottomOf="@+id/hachaCobreTitulo" />

        <TextView
            android:id="@+id/hachaAceroPrecio"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="35dp"
            android:text="5000"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hachaCobrePrecio" />

        <ImageView
            android:id="@+id/hachaAceroMoneda"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hachaAceroPrecio"
            app:layout_constraintTop_toBottomOf="@+id/hachaCobrePrecio" />

        <ImageView
            android:id="@+id/hachaOro"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/hacha_oro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hachaAcero" />

        <TextView
            android:id="@+id/hachaOroTitulo"
            android:layout_width="104dp"
            android:layout_height="33dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="Hachas de oro"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/hachaOro"
            app:layout_constraintTop_toBottomOf="@+id/hachaAceroTitulo" />

        <TextView
            android:id="@+id/hachaOroPrecio"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="35dp"
            android:text="10.000"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hachaAceroPrecio" />

        <ImageView
            android:id="@+id/hachaOroMoneda"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hachaOroPrecio"
            app:layout_constraintTop_toBottomOf="@+id/hachaAceroPrecio" />

        <ImageView
            android:id="@+id/hachaIridio"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/hacha_iridio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hachaOro" />

        <TextView
            android:id="@+id/hachaIridioTitulo"
            android:layout_width="118dp"
            android:layout_height="37dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="55dp"
            android:text="Hachas de iridio"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/hachaIridio"
            app:layout_constraintTop_toBottomOf="@+id/hachaOroTitulo" />

        <TextView
            android:id="@+id/hachaIridioPrecio"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="35dp"
            android:text="25.000"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hachaOroPrecio" />

        <ImageView
            android:id="@+id/hachaIridioMoneda"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hachaIridioPrecio"
            app:layout_constraintTop_toBottomOf="@+id/hachaOroPrecio" />

        <TextView
            android:id="@+id/botonVolverHachas"
            style="@style/MyButtonStyle"
            android:layout_width="141dp"
            android:layout_height="48dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="Volver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hachaIridio" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>