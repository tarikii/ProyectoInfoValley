<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40CFFF"
    android:id="@+id/miniatura"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/piruleta"
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:layout_marginBottom="56dp"
        android:src="@drawable/piruleta"
        app:layout_constraintBottom_toTopOf="@+id/pato"
        app:layout_constraintEnd_toStartOf="@+id/cerdo"
        app:layout_constraintHorizontal_bias="0.292"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/pastel"
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:layout_marginBottom="68dp"
        android:src="@drawable/pastel"
        app:layout_constraintBottom_toTopOf="@+id/piruleta"
        app:layout_constraintEnd_toStartOf="@+id/vaca"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/vaca"
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="72dp"
        android:src="@drawable/vaca"
        app:layout_constraintBottom_toTopOf="@+id/cerdo"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cerdo"
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:layout_marginBottom="56dp"
        android:src="@drawable/cerdo"
        app:layout_constraintBottom_toTopOf="@+id/pato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vaca" />

    <ImageView
        android:id="@+id/pato"
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/pato"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/scroll"
        android:layout_width="278dp"
        android:layout_height="134dp"
        android:src="@drawable/scroll"
        app:layout_constraintBottom_toTopOf="@+id/pastel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <TextView
        android:id="@+id/infovalley"
        android:layout_width="214dp"
        android:layout_height="44dp"
        android:text="InfoValley"
        android:textAlignment="center"
        android:textColor="#953131"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/scroll"
        app:layout_constraintEnd_toEndOf="@+id/scroll"
        app:layout_constraintStart_toStartOf="@+id/scroll"
        app:layout_constraintTop_toTopOf="@+id/scroll"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>