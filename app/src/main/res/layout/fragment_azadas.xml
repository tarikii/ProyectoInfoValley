<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40CFFF"
    tools:context=".Azadas">

    <TextView
        android:id="@+id/solarionAzadas"
        style="@style/MySolarionStyle"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="Azadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scrollNombreAzadas"
        style="@style/MyScrollStyle"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/solarionAzadas" />

    <TextView
        android:id="@+id/scrollPrecioAzadas"
        style="@style/MyScrollStyle"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="Precio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/solarionAzadas" />

    <ImageView
        android:id="@+id/azadaNormal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/azada_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollNombreAzadas" />

    <TextView
        android:id="@+id/hachaNormalTitulo"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:text="Azadas"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/azadaNormal"
        app:layout_constraintTop_toBottomOf="@+id/scrollNombreAzadas" />

    <TextView
        android:id="@+id/azadaNormalPrecio"
        android:layout_width="98dp"
        android:layout_height="42dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:text="Herramienta inicial"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollPrecioAzadas" />

    <ImageView
        android:id="@+id/azadaCobre"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/azada_cobre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azadaNormal" />

    <TextView
        android:id="@+id/azadaCobreTitulo"
        android:layout_width="99dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:text="Azadas de cobre"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/azadaCobre"
        app:layout_constraintTop_toBottomOf="@+id/hachaNormalTitulo" />

    <TextView
        android:id="@+id/azadaCobrePrecio"
        android:layout_width="58dp"
        android:layout_height="22dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="35dp"
        android:text="2000"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azadaNormalPrecio" />

    <ImageView
        android:id="@+id/azadaCobreMoneda"
        android:layout_width="29dp"
        android:layout_height="23dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/coin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/azadaCobrePrecio"
        app:layout_constraintTop_toBottomOf="@+id/azadaNormalPrecio" />

    <ImageView
        android:id="@+id/azadaAcero"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/azada_acero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azadaCobre" />

    <TextView
        android:id="@+id/azadaAceroTitulo"
        android:layout_width="99dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:text="Azadas de acero"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/azadaAcero"
        app:layout_constraintTop_toBottomOf="@+id/azadaCobreTitulo" />

    <TextView
        android:id="@+id/azadaAceroPrecio"
        android:layout_width="58dp"
        android:layout_height="22dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="35dp"
        android:text="5000"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azadaCobrePrecio" />

    <ImageView
        android:id="@+id/azadaAceroMoneda"
        android:layout_width="29dp"
        android:layout_height="23dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/coin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/azadaAceroPrecio"
        app:layout_constraintTop_toBottomOf="@+id/azadaCobrePrecio" />

    <ImageView
        android:id="@+id/azadaOro"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/azada_oro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azadaAcero" />

    <TextView
        android:id="@+id/azadaOroTitulo"
        android:layout_width="104dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:text="Azadas de oro"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/azadaOro"
        app:layout_constraintTop_toBottomOf="@+id/azadaAceroTitulo" />

    <TextView
        android:id="@+id/azadaOroPrecio"
        android:layout_width="58dp"
        android:layout_height="22dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="35dp"
        android:text="10.000"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azadaAceroPrecio" />

    <ImageView
        android:id="@+id/azadaOroMoneda"
        android:layout_width="29dp"
        android:layout_height="23dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/coin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/azadaOroPrecio"
        app:layout_constraintTop_toBottomOf="@+id/azadaAceroPrecio" />

    <ImageView
        android:id="@+id/azadaIridio"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/azada_iridio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azadaOro" />

    <TextView
        android:id="@+id/azadaIridioTitulo"
        android:layout_width="118dp"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="55dp"
        android:text="Azadas de iridio"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/azadaIridio"
        app:layout_constraintTop_toBottomOf="@+id/azadaOroTitulo" />

    <TextView
        android:id="@+id/azadaIridioPrecio"
        android:layout_width="58dp"
        android:layout_height="22dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="35dp"
        android:text="25.000"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azadaOroPrecio" />

    <ImageView
        android:id="@+id/azadaIridioMoneda"
        android:layout_width="29dp"
        android:layout_height="23dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/coin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/azadaIridioPrecio"
        app:layout_constraintTop_toBottomOf="@+id/azadaOroPrecio" />

    <TextView
        android:id="@+id/botonVolverAzadas"
        style="@style/MyButtonStyle"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azadaIridio" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>