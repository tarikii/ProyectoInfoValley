<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectInfoValley" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Remove the default bar from the top of the fragments -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_box_design</item>
        <item name="android:textColor">#AE6149</item>
        <item name="android:inputType">text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MyScrollStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/scroll</item>
        <item name="android:textColor">#AE6149</item>
        <item name="android:inputType">text</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>